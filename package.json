{
	"name": "mcp-adapter-implementation-example",
	"version": "0.1.0",
	"description": "MCP Adapter Implementation Example: A WordPress plugin demonstrating MCP Adapter integration and implementation patterns.",
	"main": "mcp-adapter-implementation-example.php",
	"scripts": {
		"wp-env": "wp-env",
		"env:start": "wp-env start",
		"env:stop": "wp-env stop",
		"env:clean": "wp-env clean",
		"env:destroy": "wp-env destroy",
		"test:php": "wp-env run tests-cli --env-cwd=wp-content/plugins/mcp-adapter-implementation-example bash -c 'export WP_PHPUNIT__TESTS_CONFIG=/var/www/html/wp-content/plugins/mcp-adapter-implementation-example/tests/wp-tests-config.php && vendor/bin/phpunit'",
		"test:php:unit": "wp-env run tests-cli --env-cwd=wp-content/plugins/mcp-adapter-implementation-example bash -c 'export WP_PHPUNIT__TESTS_CONFIG=/var/www/html/wp-content/plugins/mcp-adapter-implementation-example/tests/wp-tests-config.php && vendor/bin/phpunit --testsuite=unit'",
		"test:php:integration": "wp-env run tests-cli --env-cwd=wp-content/plugins/mcp-adapter-implementation-example bash -c 'export WP_PHPUNIT__TESTS_CONFIG=/var/www/html/wp-content/plugins/mcp-adapter-implementation-example/tests/wp-tests-config.php && vendor/bin/phpunit --testsuite=integration'",
		"test:php:coverage": "wp-env run tests-cli --env-cwd=wp-content/plugins/mcp-adapter-implementation-example bash -c 'export WP_PHPUNIT__TESTS_CONFIG=/var/www/html/wp-content/plugins/mcp-adapter-implementation-example/tests/wp-tests-config.php && vendor/bin/phpunit --coverage-html tests/_output/coverage'",
		"lint:php": "wp-env run tests-cli --env-cwd=wp-content/plugins/mcp-adapter-implementation-example composer lint:php",
		"lint:php:fix": "wp-env run tests-cli --env-cwd=wp-content/plugins/mcp-adapter-implementation-example composer lint:php:fix",
		"dev": "wp-env start && echo 'WordPress development site: http://localhost:8890' && echo 'WordPress admin: http://localhost:8890/wp-admin (admin/password)'",
		"setup": "npm install && wp-env start"
	},
	"devDependencies": {
		"@wordpress/env": "^10.28.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/WordPress/mcp-adapter"
	},
	"keywords": [
		"wordpress",
		"mcp",
		"abilities-api",
		"mcp-adapter",
		"ai",
		"automation"
	],
	"author": "Ovidiu Iulian Galatan",
	"license": "GPL-2.0-or-later"
}
