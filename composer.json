{
  "name": "galatanovidiu/mcp-adapter-implementation-example",
  "description": "MCP Adapter Implementation Example: A WordPress plugin demonstrating MCP Adapter integration and implementation patterns.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4",
    "automattic/jetpack-autoloader": "^5.0",
    "wordpress/mcp-adapter": "dev-trunk",
    "wordpress/abilities-api": "dev-trunk"
  },
  "require-dev": {
    "automattic/vipwpcs": "^3.0",
    "phpcompatibility/php-compatibility": "10.x-dev as 9.99.99",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^2.1.22",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "slevomat/coding-standard": "^8.0",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "wp-coding-standards/wpcs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "OvidiuGalatan\\McpAdapterExample\\": "includes/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/WordPress/abilities-api"
    },
    {
      "type": "vcs",
      "url": "https://github.com/WordPress/mcp-adapter"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "automattic/jetpack-autoloader": true,
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "platform": {
      "php": "7.4"
    }
  },
  "scripts": {
    "lint:php": "phpcs",
    "lint:php:fix": "phpcbf",
    "lint:php:stan": "vendor/bin/phpstan analyse --memory-limit=1G",
    "format": "phpcbf",
    "test": "echo 'No tests configured yet'"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
